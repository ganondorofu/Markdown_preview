
{
  "name": "popup-pro",
  "displayName": "Popup Pro",
  "description": "A VSCode extension that adds an activity bar button to trigger a popup message and provides Docusaurus Markdown preview.",
  "version": "0.0.1",
  "publisher": "your-publisher-name",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo/popup-pro.git"
  },
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onCommand:popup-pro.showPopup",
    "onCommand:docusaurus-preview.show",
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "popup-pro.showPopup",
        "title": "Show Popup Pro Message",
        "icon": "$(comment-discussion)"
      },
      {
        "command": "docusaurus-preview.show",
        "title": "Show Docusaurus Preview",
        "icon": "$(markdown)"
      }
    ],
    "menus": {
      "activitybar": [
        {
          "command": "popup-pro.showPopup",
          "group": "navigation@1",
          "when": "true"
        }
      ],
      "editor/title": [
        {
          "command": "docusaurus-preview.show",
          "group": "navigation",
          "when": "editorLangId == markdown"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "dependencies": {
    "markdown-it": "^14.0.0",
    "markdown-it-container": "^4.0.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.6",
    "@types/markdown-it": "^13.0.7",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0"
  }
}
